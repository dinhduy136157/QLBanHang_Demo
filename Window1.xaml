<Window x:Class="QLBanHang_Demo.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLBanHang_Demo"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dvg1" AutoGenerateColumns="False" AlternatingRowBackground="LightBlue" CanUserAddRows="False"  Margin="29,59,106,270" >

            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã SP" Binding="{Binding MaSp}"></DataGridTextColumn>
                <DataGridTextColumn Header="Tên SP" Binding="{Binding TenSp}"></DataGridTextColumn>
                <DataGridTextColumn Header="Tên loại SP" Binding="{Binding TenLoai}"></DataGridTextColumn>
                <DataGridTextColumn Header="Số lượng bán" Binding="{Binding SoLuongMua}"></DataGridTextColumn>
                <DataGridTextColumn Header="Tổng tiền giá" Binding="{Binding TongTienBan}"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
